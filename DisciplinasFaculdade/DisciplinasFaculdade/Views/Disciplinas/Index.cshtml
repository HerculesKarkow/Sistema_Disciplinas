@model IEnumerable<DisciplinasFaculdade.Models.Disciplina>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="jumbotron">

        <h2>Disciplinas</h2>

        <p>
            @Html.ActionLink("Adicionar nova", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    Disciplina
                </th>

                <th>
                    Professor
                </th>

                <th>
                    Dia da semana
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Professor.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaDaSemana)
                    </td>
                    <td align="right">
                        <i class="glyphicon glyphicon-pencil"></i>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) •
                        <i class="glyphicon glyphicon-search"></i>
                        @Html.ActionLink("Detalhar", "Details", new { id = item.Id }) •
                        <i class="glyphicon glyphicon-remove"></i>
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
