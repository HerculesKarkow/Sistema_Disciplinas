<h3>Tem certeza que deseja deletar este usuário?</h3>
<div>
    <h5 style="color:red;">
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </h5>
    <hr />
    <dl class="dl-horizontal">
        <dt style="text-align:left;">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt style="text-align:left;">
