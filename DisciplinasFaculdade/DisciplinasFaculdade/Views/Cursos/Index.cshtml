@model IEnumerable<DisciplinasFaculdade.Models.Curso>

@{
    ViewBag.Title = "Cursos";
}

<h2>Cursos</h2>

<p>
    @Html.ActionLink("Cadastrar Curso", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td style="text-align:right;">
            
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning"}) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }, new { @class = "btn btn-info"}) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
