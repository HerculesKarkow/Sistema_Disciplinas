@*@model IEnumerable<DisciplinasFaculdade..Disciplina>*@
@{
    ViewBag.Title = "Index";
}

<h2>Realizar Conexão</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Realizar Conexão</h4>
        <hr />


        <div class="form-group">
            @Html.Label("Curso", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdCurso", (IEnumerable<SelectListItem>)ViewBag.Curso, null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.Curso, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
