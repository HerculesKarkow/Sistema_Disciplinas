@*@model IEnumerable<DisciplinasFaculdade..Disciplina>*@
@{
    ViewBag.Title = "Index";
}


<div class="container">

    <div class="jumbotron">

        <h2>Exportar</h2>

        <p>Selecione o curso para gerar o excel</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.Label("Curso", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdCurso", (IEnumerable<SelectListItem>)ViewBag.Curso, null, htmlAttributes: new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Curso, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Gerar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>