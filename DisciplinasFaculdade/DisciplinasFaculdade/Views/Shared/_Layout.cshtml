<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/navbar-fixed-right.min.css")
    @Styles.Render("~/Content/navbar-fixed-left.min.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-left">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Sistema de Disciplinas</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="Predios">
                        <a href="/Predios">
                            <i class="	glyphicon glyphicon-chevron-right"></i>
                            Prédio
                        </a>
                    </li>
                    <li class="Salas">
                        <a href="/Salas">
                            <i class="glyphicon glyphicon-chevron-right"></i>
                            Sala
                        </a>
                    </li>
                    <li class="Cursos">
                        <a href="/Cursos">
                            <i class="glyphicon glyphicon-chevron-right"></i>
                            Curso
                        </a>
                    </li>
                    <li class="Professores">
                        <a href="/Professores">
                            <i class="glyphicon glyphicon-chevron-right"></i>
                            Professor
                        </a>
                    </li>
                    <li class="ProfessorCursos">
                        <a href="/ProfessorCursos">
                            <i class="glyphicon glyphicon-chevron-right"></i>
                            Professor Curso
                        </a>
                    </li>
                    <li class="Disciplinas">
                        <a href="/Disciplinas">
                            <i class="glyphicon glyphicon-chevron-right"></i>
                            Disciplina
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom" style="text-align:center;">
            <p><b><i>&copy; @DateTime.Now.Year - Sistema de Disciplinas</i></b></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/app.js")
    @RenderSection("scripts", required: false)
</body>
</html>
