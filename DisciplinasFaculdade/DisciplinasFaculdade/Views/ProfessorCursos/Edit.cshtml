@model DisciplinasFaculdade.Models.ProfessorCurso

@{
    ViewBag.Title = "Edit";
}

<div class="container">

    <div class="jumbotron">


        <h2>Editar Professor no Curso</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Altere os campos abaixo</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdProfessorCurso)

                <div class="form-group">
                    <div class = "control-label col-md-3">
                        <b>Nome do professor</b>
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownList("IdProfessor", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdProfessor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class = "control-label col-md-3">
                        <b>Nome do curso</b>
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownList("IdCurso", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdCurso, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" /> |
                        @Html.ActionLink("Voltar", "Index")
                    </div>
                </div>
            </div>
        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>