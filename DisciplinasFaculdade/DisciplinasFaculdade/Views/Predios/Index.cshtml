@model IEnumerable<DisciplinasFaculdade.Models.Predio>

@{
    ViewBag.Title = "Index";
}


<div class="container">

    <div class="jumbotron">

        <h2>Prédios</h2>

        <p>
            @Html.ActionLink("Adicionar novo", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    Prédio
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td align="right">
                        <i class="glyphicon glyphicon-pencil"></i>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdPredio }) •
                        <i class="glyphicon glyphicon-remove"></i>
                        @Html.ActionLink("Deletar", "Delete", new { id = item.IdPredio })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
