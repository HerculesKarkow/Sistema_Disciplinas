@model IEnumerable<Curso_ASP_MVC_EF.Models.Sala>

@{
    ViewBag.Title = "Salas";
}

<h2>Salas</h2>

<p>
    @Html.ActionLink("Cadastrar Sala", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Predio.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtdAlunos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtdDisciplinas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Predio.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtdAlunos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtdDisciplinas)
        </td>
        <td style="text-align:right;">
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
