@model DisciplinasFaculdade.Models.Sala

@{
    ViewBag.Title = "Create";
}

<div class="container">

    <div class="jumbotron">

        <h2>Adicionar Sala</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Preencha os campos abaixo</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="control-label col-md-3">
                        <b>Prédio</b>
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownList("IdPredio", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdPredio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-3">
                        <b>Nome da sala</b>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-3">
                        <b>Quantidade de lugares</b>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.QtdLugares, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.QtdLugares, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input type="submit" value="Adicionar" class="btn btn-default" /> |
                        @Html.ActionLink("Voltar", "Index")
                    </div>
                </div>
            </div>
        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

    </div>

</div>
